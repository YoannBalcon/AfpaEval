{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Catalogue {% endblock %}

{% block navbar %}
    <div id="logo"><a href="http://www.pleyber-christ.fr"><img src="http://www.pleyber-christ.fr/medias/images/www/structure/contenu_logo_pleyber.gif" alt="Pleyber-Christ  - Logo"/></a> 
    </div>

    <div>
        <ul id ="homeNavBar">
            <li><a class="itemNavbar"  href="#">Cadre de vie</a></li>
            <li><a class="itemNavbar"  href="#">Vie municipale</a></li>
            <li><a class="itemNavbar" href="#">Vie locale et sociale</a></li>
            <li><a class="itemNavbar" href="#">Vie associative et culturelle</a></li>
            <li><a class="itemNavbar" href="#">Liens</a></li>
            <li><a class="itemNavbar" href="#">Economie</a></li>
            <li class="logButtons"><a class="itemNavbar" href="../">Revenir à l'accueil</a></li>
            <li class="logButtons"><a class="itemNavbar" href="#">Se connecter</a></li>
            <li class="logButtons"><a class="itemNavbar" href="#">S'inscrire</a></li>               
        </ul>
    </div>
{% endblock %}
{% block body %}
    <h1>Catalogue</h1>

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Annee</th>
                <th>Genre</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for ouvrage in ouvrages %}
                <tr>
                    <td><a href="{{ path('ouvrage_show', { 'id': ouvrage.id }) }}">{{ ouvrage.titre }} </a></td>
                    <td>{{ouvrage.auteur.prenom}} {{ouvrage.auteur.nom}} </td>
                    <td>{{ ouvrage.annee }} </td>
                    <td>{{ ouvrage.genre.nom }} </td>
                    <td>{% if ouvrage.date %}{{ ouvrage.date|date('Y-m-d') }}{% endif %} </td>
                    <td>
                        <ul>                    
                            <li id="editCatalogue">
                                <a href="{{ path('ouvrage_edit', { 'id': ouvrage.id }) }}">éditer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div>
        <ul>
            <li id="editCatalogue">
                <a href="{{ path('ouvrage_new') }}">Ajouter un ouvrage au catalogue</a>
            </li>
        </ul>
    </div>
{% endblock %}
