{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ouvrages list</h1>

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Annee</th>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ouvrage in ouvrages %}
            <tr>
                <td><a href="{{ path('ouvrage_show', { 'id': ouvrage.id }) }}">{{ ouvrage.titre }}</a></td>
                <td>{{ ouvrage.annee }}</td>
                <td>{% if ouvrage.date %}{{ ouvrage.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ ouvrage.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ouvrage_show', { 'id': ouvrage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ouvrage_edit', { 'id': ouvrage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ouvrage_new') }}">Create a new ouvrage</a>
        </li>
    </ul>
{% endblock %}
