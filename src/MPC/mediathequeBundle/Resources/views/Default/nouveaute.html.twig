{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Nouveautés {% endblock %}

{% block navigation %}
        <h3 class ="navbarTitle">Nouveautés</h3>
        <a class="itemNavbar" id="catalog" href="{{ path ('mp_cmediatheque_homepage') }}"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>             
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Aperçu</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Ajouté le</th>
            </tr>
        </thead>
        <tbody>
            {% for ouvrage in ouvrages %}
                <tr>
                    <td><img class="photoTitre" src="{{ ouvrage.photo }}"height = "190" width ="150"</td>
                    <td><a href="{{ path('mp_cmediatheque_catalogue', { 'id': ouvrage.id }) }}">{{ ouvrage.titre }} </a></td>
                    <td>{{ouvrage.auteur.prenom}} {{ouvrage.auteur.nom}} </td>  
                    <td>{{ouvrage.date|date("m/d/Y")}}</td>  

                    {% if is_granted("ROLE_USER") and not is_granted("ROLE_ADMIN") %} {% set reserve = false %}
                        {% for dispo in dispos %}
                            {% if dispo.ouvrage == ouvrage %}
                                {% set reserve = true %}
                            {% endif%}
                        {% endfor%}
                        {% if reserve %}
                            <td>Indisponible</td>
                        {% else %}          
                            <td><a href="{{ path('mpc_reservation', {'id': ouvrage.id }) }}">Réserver</a></td>
                        {% endif %}
                    {% endif %}
                    <td>
                        {% if is_granted("ROLE_ADMIN") %}
                            <ul> 
                                <li id="editCatalogue">
                                    <a href="#">éditer l'article</a>
                                </li>                        
                                <li id="editCatalogue">
                                    <a href="#">supprimer l'article</a>
                                </li>                        
                            </ul>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block hours %}
{% endblock %}
