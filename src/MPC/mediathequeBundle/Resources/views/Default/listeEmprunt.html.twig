{% extends 'base.html.twig' %}


{% block navigation %}
    <h3 class ="navbarTitle">Liste des emprunts</h3>
    <div>
        <a class="itemNavbar" id="catalog" href="{{ path ('mp_cmediatheque_homepage') }}" title ="accueil"><i class="fa fa-home" aria-hidden="true"></i><span id ="home"> Accueil</span></a>               
    </div>    
{% endblock %}

{% block body %}
    <h3 class="smallTitle">Liste des emprunts</h3>

    {% for emprunt in emprunts %}
        <div class ="catalogContainer">
            <div class ="catalogFiche">
                <div id ="catalogPhoto">
                    <img class="photoTitre" src="{{ emprunt.ouvrage.photo }}"height = "190" width ="150">
                </div>
                <div class ="catalogInfo">                        
                    <p>{{ emprunt.ouvrage.titre }}</p>
                    <p>Emprunt√© par : {{ emprunt.utilisateur.username }}</p>
                    <p>date d'emprunt : {{ emprunt.dateEmprunt|date("d/m/Y") }}</p>
                    <p>date de retour : {{ emprunt.dateRetour|date("d/m/Y") }}</p>
                </div> 
                <div class ="catalogBtn">
                    <li><a id="editCatalogue" href ="{{ path('mpc_retour',  { 'id': emprunt.id })}}">Valider le retour</a></li>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}
{% block hours %}
{% endblock %}
