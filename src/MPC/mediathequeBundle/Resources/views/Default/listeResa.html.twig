{% extends 'base.html.twig' %}


{% block body %}
    <h1>Liste des réservations</h1>
    <table>
        <thead>
            <tr>
                <th>Document</th>
                <th> Utilisateur</th>
                <th> Date de réservation</th>
            </tr>
        </thead> 
        <tbody>
            {% for listeResa in listeResa %}
                <tr>
                    <td>{{ listeResa.ouvrage.titre }}</td>
                    <td>{{ listeResa.utilisateur.username }}</td>
                    <td>{{ listeResa.date|date("m/d/Y") }}</td>
                    <td><a href ="{{path('mpc_emprunt', { 'id': listeResa.id })}}">Valider l'emprunt</a></td>
                {% endfor %}
            {% endblock %}