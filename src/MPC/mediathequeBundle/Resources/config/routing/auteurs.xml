<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="auteurs_index" path="/" methods="GET">
        <default key="_controller">MPCmediathequeBundle:Auteurs:index</default>
    </route>

    <route id="auteurs_show" path="/{id}/show" methods="GET">
        <default key="_controller">MPCmediathequeBundle:Auteurs:show</default>
    </route>

    <route id="auteurs_new" path="/new" methods="GET|POST">
        <default key="_controller">MPCmediathequeBundle:Auteurs:new</default>
    </route>

    <route id="auteurs_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">MPCmediathequeBundle:Auteurs:edit</default>
    </route>

    <route id="auteurs_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">MPCmediathequeBundle:Auteurs:delete</default>
    </route>

</routes>
