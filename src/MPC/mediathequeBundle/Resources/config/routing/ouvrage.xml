<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ouvrage_index" path="/" methods="GET">
        <default key="_controller">MPCmediathequeBundle:Ouvrage:index</default>
    </route>

    <route id="ouvrage_show" path="/{id}/show" methods="GET">
        <default key="_controller">MPCmediathequeBundle:Ouvrage:show</default>
    </route>

    <route id="ouvrage_new" path="/new" methods="GET|POST">
        <default key="_controller">MPCmediathequeBundle:Ouvrage:new</default>
    </route>

    <route id="ouvrage_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">MPCmediathequeBundle:Ouvrage:edit</default>
    </route>

    <route id="ouvrage_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">MPCmediathequeBundle:Ouvrage:delete</default>
    </route>

</routes>
